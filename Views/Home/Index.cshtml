<script type="text/javascript">

    function showDownloadButton()
    {
        this.document.getElementById('downloadGenko').style = "display: block;"
    }

</script>

<div class="jumbotron">
    <h1>螢PDF加工ツール</h1>
    <p class="lead">PDFから注釈の内容を取りながらPDFを自動的に編集するツールです。</p>
    <h2>PDF を選択する</h2>
    @using (Html.BeginForm("ChoosePdf", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="pdfPath" required />
        <button type="submit" onclick="showDownloadButton()">PDF加工を始めます</button>
    }
</div>
<div class="row">
    <div class="col">

</div>
</div>
<div class="jumbotron" id="downloadGenko" style="display: none">
    <p class="lead">PDFのダウンロードが始まりました。下記のボタンをクリックし、原稿もダウンロードしてください。</p>
        @using (Html.BeginForm("Download_Genko", "Home", FormMethod.Post))
        {
            <button type="submit">原稿もダウンロード</button>
        }
</div>

